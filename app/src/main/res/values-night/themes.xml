<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.PaymentUI" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--    Font Sizing Revamp-->
    <style name="ToolBarHeading">
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textSize">@dimen/_17sdp</item>
        <item name="android:drawablePadding">@dimen/_4sdp</item>
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="TextSubheading_1">
        <!--<item name="android:textColor">@color/colorSecondaryText</item>-->
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">#fff</item>

    </style>

    <style name="TextSubheading">
        <!--<item name="android:textColor">@color/colorSecondaryText</item>-->
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">#fff</item>

    </style>

    <style name="TextSubheadingRegular">
        <!--<item name="android:textColor">@color/colorSecondaryText</item>-->
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="textAllCaps">false</item>

    </style>

    <style name="TextSubheadingSmallRegular">
        <!--<item name="android:textColor">@color/colorSecondaryText</item>-->
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>

    </style>
</resources>